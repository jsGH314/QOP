@model Appointment

@{
    ViewData["Title"] = "Claim Time Slot";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border-0 my-4">
                <div class="card-header bg-secondary bg-gradient text-center py-3">
                    <h2 class="text-white mb-0">Claim This Time Slot?</h2>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <dl class="row mb-0">
                            <dt class="col-sm-4 text-muted">Date</dt>
                            <dd class="col-sm-8">@Model.ApptDate.ToShortDateString()</dd>
                            <dt class="col-sm-4 text-muted">Time</dt>
                            <dd class="col-sm-8">@Model.ApptTime.ToShortTimeString()</dd>
                            <dt class="col-sm-4 text-muted">Staff</dt>
                            <dd class="col-sm-8">@Model.StaffName</dd>
                            <dt class="col-sm-4 text-muted">Transport</dt>
                            <dd class="col-sm-8">
                                @(Model.isTransportAppt ? "Available" : "Unavailable")
                            </dd>
                        </dl>
                    </div>
                    <form asp-action="ClaimSlot">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-3 justify-content-end">
                            <button type="submit" class="btn btn-primary px-4">Claim Time Slot</button>
                            <a asp-action="Index" class="btn btn-outline-primary px-4" role="button">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
