@model JournalEntry

@{
    ViewData["Title"] = "Journal Entry Details";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-secondary bg-gradient text-center py-3">
                    <h2 class="text-white mb-0">Journal Entry Details</h2>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4 text-center">
                        <span class="badge bg-primary fs-6">
                            @Model.EntryDate.ToString("f")
                        </span>
                    </div>
                    <div class="mb-4">
                        <div>
                            <span class="badge bg-info text-dark">@Model.ApplicationUser?.Email</span>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label text-muted">Entry</label>
                        <div class="border rounded p-3 bg-light">
                            <p class="text-secondary lh-base mb-0">@Html.Raw(Model.Entry)</p>
                        </div>
                    </div>
                    <div class="d-flex gap-3 justify-content-end">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary px-4" role="button">Edit</a>
                        <a asp-action="Index" class="btn btn-outline-primary px-4" role="button">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
