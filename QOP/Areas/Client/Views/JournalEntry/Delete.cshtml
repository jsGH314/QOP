@model QOP.Models.JournalEntry

@{
    ViewData["Title"] = "Delete Journal Entry";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow border-0">
                <div class="card-header bg-danger bg-gradient text-center py-3">
                    <h2 class="text-white mb-0">Delete Journal Entry</h2>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning text-center mb-4">
                        <strong>Are you sure you want to delete this journal entry?</strong>
                    </div>
                    <dl class="row mb-4">
                        <dt class="col-sm-3 text-muted">Entry</dt>
                        <dd class="col-sm-9">@Html.Raw(Model.Entry)</dd>
                        <dt class="col-sm-3 text-muted">Date</dt>
                        <dd class="col-sm-9">@Model.EntryDate.ToString("f")</dd>
                    </dl>
                    <form asp-action="Delete" class="d-flex gap-3 justify-content-end">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger px-4">Delete</button>
                        <a asp-action="Index" class="btn btn-outline-primary px-4" role="button">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
