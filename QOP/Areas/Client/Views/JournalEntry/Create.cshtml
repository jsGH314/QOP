@model JournalEntry

@{
    ViewData["Title"] = "Create Journal Entry";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-secondary bg-gradient text-center py-3">
                    <h2 class="text-white mb-0">Create Journal Entry</h2>
                </div>
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="mb-4">
                            <label asp-for="Entry" class="form-label text-muted"></label>
                            <textarea asp-for="Entry" class="form-control border-0 shadow" rows="12" style="min-height:300px;"></textarea>
                            <span asp-validation-for="Entry" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="EntryDate" class="form-label"></label>
                            <input asp-for="EntryDate" class="form-control" value="@Model.EntryDate.ToString("yyyy-MM-ddTHH:mm")" type="datetime-local" />
                            <span asp-validation-for="EntryDate" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary px-4">Create</button>
                            <a asp-action="Index" class="btn btn-outline-primary px-4" role="button">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | numlist bullist indent outdent',
        });
    </script>
    <partial name="_ValidationScriptsPartial"/>
}