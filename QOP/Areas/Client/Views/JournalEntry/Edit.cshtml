@model QOP.Models.JournalEntry

@{
    ViewData["Title"] = "Edit Journal Entry";
}

<style>
    .edit-card {
        min-height: 320px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
</style>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card edit-card shadow border-0">
                <div class="card-header bg-secondary bg-gradient text-center py-3">
                    <h2 class="text-white mb-0">Edit Journal Entry</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-4">
                            <label asp-for="Entry" class="form-label text-muted"></label>
                            <textarea asp-for="Entry" class="form-control border-0 shadow" rows="8"></textarea>
                            <span asp-validation-for="Entry" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="EntryDate" class="form-label"></label>
                            <input asp-for="EntryDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="EntryDate" class="text-danger"></span>
                        </div>
                        <div class="d-flex gap-3 justify-content-end">
                            <button type="submit" class="btn btn-primary px-4">Save</button>
                            <a asp-action="Index" class="btn btn-outline-primary px-4" role="button">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
