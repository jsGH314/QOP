@model IEnumerable<Appointment>

@{
    ViewData["Title"] = "Schedule Appointment";
    var availableAppointments = Model.Where(a => a.ClientId == null).ToList();
}

<style>
    .schedule-card {
        min-height: 220px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
</style>

<div class="container py-4">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h2 class="mb-3">Schedule an Appointment</h2>
        </div>
    </div>

    @if (!availableAppointments.Any())
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="alert alert-warning fs-5">
                    No available time slots!
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var appointment in availableAppointments)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card schedule-card shadow rounded">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <p class="h5 text-dark text-uppercase text-center mb-2">@appointment.ApptDate.Date.ToShortDateString()</p>
                            <p class="h5 text-dark text-uppercase text-center mb-2">@appointment.ApptTime.ToShortTimeString()</p>
                            <p class="text-warning text-center mb-2">with <b>@appointment.StaffName</b></p>
                            <p class="text-secondary text-center mb-2">
                                @(appointment.isTransportAppt ? "Transport Available" : "Transport Unavailable")
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0 pt-0">
                            <a asp-action="ClaimSlot" asp-route-Id="@appointment.Id"
                               class="btn btn-primary w-100">
                                Claim Time Slot
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

