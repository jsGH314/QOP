@model IEnumerable<Appointment>

@{
    ViewData["Title"] = "Schedule Appointment";
}

<div class="row pb-3">
    @foreach (var appointment in Model)
    {
        @if (appointment.ClientId == null)
        {
            <div class="col-lg-3 col-sm-6">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow  border-top border-5 rounded">
                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@appointment.ApptDate.Date.ToShortDateString()</p>
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@appointment.ApptTime.ToShortTimeString()</p>
                                    <p class="card-title text-warning text-center">with <b>@appointment.StaffName</b></p>
                                    @if (appointment.isTransportAppt == true)
                                    {
                                        <p class="card-title text-warning text-center">Transport Available</p>
                                    }
                                    @if (appointment.isTransportAppt == false)
                                    {
                                        <p class="card-title text-warning text-center">Transport Unavailable</p>
                                    }
                                    </div>
                            </div>
                            <div>
                                <a asp-action="ClaimSlot" asp-route-Id="@appointment.Id"
                                   
                                   class="btn btn-primary bg-gradient border-0 form-control">
                                    Claim Time Slot
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    }
</div>

