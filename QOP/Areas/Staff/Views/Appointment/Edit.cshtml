@model QOP.Models.Appointment

@{
    ViewData["Title"] = "Edit Appointment";
}

<style>
    .edit-card {
        min-height: 320px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
</style>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card edit-card shadow border-0">
                <div class="card-header bg-secondary bg-gradient text-center py-3">
                    <h2 class="text-white mb-0">Edit Appointment</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-4">
                            <label class="form-label">Client Name</label>
                            <div class="form-control-plaintext">
                                @(string.IsNullOrEmpty(Model.ClientName) ? "Open" : Model.ClientName)
                            </div>
                        </div>
                        <div class="mb-4 form-check">
                            <input class="form-check-input" asp-for="isTransportAppt" />
                            <label class="form-check-label" asp-for="isTransportAppt"></label>
                        </div>
                        <div class="mb-4">
                            <label asp-for="ApptDate" class="form-label"></label>
                            <input asp-for="ApptDate" class="form-control" type="date" />
                            <span asp-validation-for="ApptDate" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="ApptTime" class="form-label"></label>
                            <input asp-for="ApptTime" class="form-control" type="time" />
                            <span asp-validation-for="ApptTime" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="status" class="form-label"></label>
                            <select asp-for="status" class="form-select">
                                <option value="Available">Available</option>
                                <option value="Confirmed">Confirmed</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="status" class="text-danger"></span>
                        </div>
                        <div class="d-flex gap-3 justify-content-end">
                            <button type="submit" class="btn btn-primary px-4">Save</button>
                            <a asp-action="Index" class="btn btn-outline-primary px-4" role="button">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
