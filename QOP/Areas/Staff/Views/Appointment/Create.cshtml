@model QOP.Models.Appointment 

@{
    ViewData["Title"] = "Create Appointment";
}

<style>
    .create-card {
        min-height: 320px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card create-card shadow border-0">
                <div class="card-header bg-secondary bg-gradient text-center py-3">
                    <h2 class="text-white mb-0">Create Appointment</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input asp-for="ClientId" type="hidden" />
                        <div class="mb-4 form-check">
                            <input class="form-check-input" asp-for="isTransportAppt" />
                            <label class="form-check-label" asp-for="isTransportAppt"></label>
                        </div>
                        <div class="mb-4">
                            <label asp-for="ApptDate" class="form-label"></label>
                            <input asp-for="ApptDate" class="form-control" type="date" />
                            <span asp-validation-for="ApptDate" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="ApptTime" class="form-label"></label>
                            <input asp-for="ApptTime" class="form-control" id="apptTimePicker" type="text" />
                            <span asp-validation-for="ApptTime" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="status" class="form-label"></label>
                            <select asp-for="status" class="form-select">
                                <option value="Available">Available</option>
                                <option value="Confirmed">Confirmed</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="status" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label for="ClientId" class="form-label">Schedule With (optional)</label>
                            <select asp-for="ClientId" class="form-select" asp-items="ViewBag.ClientList">
                                <option value="">-- Open Availability --</option>
                            </select>
                            <span asp-validation-for="ClientId" class="text-danger"></span>
                        </div>
                        <div class="d-flex gap-3 justify-content-end">
                            <button type="submit" class="btn btn-primary px-4">Create</button>
                            <a asp-action="Index" class="btn btn-outline-primary px-4" role="button">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script>
        flatpickr("#apptTimePicker", {
            enableTime: true,
            noCalendar: true,
            dateFormat: "H:i",
            time_24hr: false // Set to true for 24-hour format
        });

        document.addEventListener("DOMContentLoaded", function () {
            var clientDropdown = document.querySelector('[name="ClientId"]');
            var statusDropdown = document.querySelector('[name="status"]');
            if (clientDropdown && statusDropdown) {
                clientDropdown.addEventListener("change", function () {
                    if (clientDropdown.value) {
                        statusDropdown.value = "Confirmed";
                    } else {
                        statusDropdown.value = "Available";
                    }
                });
            }
        });
    </script>
}
