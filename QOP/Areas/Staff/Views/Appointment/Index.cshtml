@model IEnumerable<Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="mb-3">Appointments</h2>
            <a asp-action="Create" class="btn btn-primary px-4">Create New</a>
        </div>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Client</th>
                            <th>Transport</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ClientName</td>
                                <td>
                                    @(item.isTransportAppt ? "Available" : "Unavailable")
                                </td>
                                <td>@item.ApptDate.ToShortDateString()</td>
                                <td>@item.ApptTime.ToShortTimeString()</td>
                                <td>
                                    @if (item.status != null && item.status.ToLower() == "canceled")
                                    {
                                        <span class="badge bg-danger">Canceled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@item.status</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-2">Details</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm me-2">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
